{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "version": "15.0",
            "flowVersion": "0.53"
         },
         "propWrapperFunctions": [ "forbidExtraProps" ]
    },
    "parserOptions": {
    "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["off"],
        "indent": [
            "off",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "off",
            "single"
        ],
        "semi": [
            "off",
            "always"
        ],
        "react/no-unescaped-entities": 0
    }
}
